import pandas as pd
import numpy as np
np.random.seed(42)  
df = pd.DataFrame(np.random.randint(0, 2, size=(10, 10)))
print("Исходный датафрейм:")
print(df)

even_columns = df.filter(lambda x: df.columns.get_loc(x) % 2 == 0)
print("\nКолонки с четными индексами :")
print(even_columns) #1

summa = df.sum().sum()
print(f"Общая сумма: {summa}") #2

df_replaced = df.replace({0: "ноль", 1: "один"})
print("\nПосле замены:")
print(df_replaced) #3
